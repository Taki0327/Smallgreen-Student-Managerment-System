<view wx:if="{{loadshow}}" class="{{loading}}">
<image src="../images/loading.gif" style="height:500rpx;width:500rpx;"></image>
</view>
<view class="head">
<image class="face" src="{{avatarUrl}}"></image>
<text style="margin-top:25rpx;margin-left:30rpx; padding: 20rpx;font-size: 35rpx;" space='nbsp'>{{name}}\n<text style="font-size: 28rpx;color: #9E9E9E;">UID：{{userid}}</text></text>
</view>
<view style="padding: 22rpx;color: #9E9E9E;font-size: 32rpx; ">个人信息</view>
<view class="main">
学校：<text class="text">{{school}}\n</text>
班级：<text class="text">{{classid}}\n</text>
学号：<text class="text">{{stuid}}\n</text>
性别：<text class="text">{{sex}}\n</text>
出生年月：<text class="text">{{birth}}\n</text>
身份证：<text class="text">{{idcard}}\n</text>
